generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model User {
  id    Int     @id @default(autoincrement())
  name  String
  email String  @unique
  password String
  notes Notes[]
}

model Notes {
  id        Int     @id @default(autoincrement())
  title     String
  content   String?
  category  String
  createdAt DateTime @default(now())
  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    Int
}
